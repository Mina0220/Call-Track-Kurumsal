# Gemini API Key (AI Email özelliği için)
# https://makersuite.google.com/app/apikey adresinden alabilirsiniz
VITE_GEMINI_API_KEY=your_api_key_here

# Admin Panel Şifresi (PRODUCTION'DA MUTLAKA DEĞİŞTİRİN!)
# Render.com'da Environment Variables bölümünde ayarlayın
VITE_ADMIN_PASSWORD=your_secure_password_here

# WebSocket Authentication Token (PRODUCTION'DA MUTLAKA DEĞİŞTİRİN!)
# Güçlü bir random token oluşturun: openssl rand -hex 32
WS_AUTH_TOKEN=your_random_websocket_token_here

# Database Configuration (Backend - Render.com PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database

# Server Configuration (Backend)
NODE_ENV=production
PORT=10000
